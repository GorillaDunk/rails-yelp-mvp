<h1><%= @restaurant.name %></h1>
<h3><%= @restaurant.address %></h3>
<h4><%= @restaurant.phone_number %></h4>
<h4><%= @restaurant.category %></h4>
<% @restaurant.reviews.each do |review| %>
  <h4><%= review.content %></h4>
  <h4><%= review.rating %></h4>
<% end %>



<%= link_to "Write a review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Update info", edit_restaurant_path(@restaurant) %>
<%= link_to "Delete",
restaurant_path(@restaurant),
data: {turbo_method: :delete, turbo_confirm: "really?" }%>
